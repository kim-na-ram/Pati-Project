            android:layout_marginEnd="@dimen/gametendency_margin_end">

            <RadioButton
                android:id="@+id/rb_Funny"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="@font/nanumsquareextrabold"
