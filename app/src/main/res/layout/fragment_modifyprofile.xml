                android:paddingVertical="@dimen/gametendency_padding_vertical"
                android:button="@null"
                android:background="@drawable/selector_tendency_radio" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/rg_Mode"
            android:layout_width="wrap_content"
